{% extends "Blog\BlogBundle:Layouts:main.html.twig" %}

{% block title %}All Blogs{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}

    {% for blog in blogs %}
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1><a href="{{ path('blog_one', {'slug': blog.link}) }}">{{ blog.name }}</a></h1>
                <p class="lead">{{ blog.content }}</p>
            </div>
        </div>
    {% endfor %}


{% endblock %}
